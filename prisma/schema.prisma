datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Book {
  id          Int               @id @default(autoincrement())
  isbn        String            @default(uuid())
  name        String
  description String?
  author      BooksAndAuthors[]
  genre       BooksAndGenres[]

  @@index([name])
}

model Author {
  id    Int               @id @default(autoincrement())
  name  String
  email String?
  book  BooksAndAuthors[]

  @@index([name])
}

model Genre {
  id   Int              @id @default(autoincrement())
  name String
  book BooksAndGenres[]
}

model BooksAndAuthors {
  id Int @id @default(autoincrement())

  book_id   Int
  author_id Int
  book      Book   @relation(fields: [book_id], references: [id], onDelete: Cascade)
  author    Author @relation(fields: [author_id], references: [id], onDelete: Restrict)

  @@unique([book_id, author_id])
}

model BooksAndGenres {
  book_id  Int
  genre_id Int
  book     Book  @relation(fields: [book_id], references: [id], onDelete: Cascade)
  genre    Genre @relation(fields: [genre_id], references: [id], onDelete: Restrict)

  @@id([book_id, genre_id])
}
