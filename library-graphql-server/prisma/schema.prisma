datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  publishedAt DateTime?

  authors     Author[]
  genres      Genre[]
}

model Author {
  id    Int     @id @default(autoincrement())
  name  String
  email String?
  books Book[]
}

model Genre {
  id    Int     @id @default(autoincrement())
  name  String
  books Book[]
}


